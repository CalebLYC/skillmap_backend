#Environment
ENV=LOCAL

# Clé secrète pour signer les tokens
SECRET_KEY=secret_key

#Type d'algorithme utilisé pour hasher le mot de passe
ALGORITHM=HS256

#Temps d'expiration du token
ACCESS_TOKEN_EXPIRE_WEEKS = 30

#URI de la base de données en mode local
DATABASE_URI_LOCAL=mongodb://localhost:27017/
#URI de la base de données en mode de développement
DATABASE_URI_DEV=mongodb://localhost:27017

#Nom de la base de données
DB_NAME=db
#Nom de la base de données en local
DB_NAME_LOCAL=db_dev


#Email du super administrateur
ADMINEMAIL=admin@gmail.com
#Mot de passe du super administrateur
ADMINPASSWORD=admin